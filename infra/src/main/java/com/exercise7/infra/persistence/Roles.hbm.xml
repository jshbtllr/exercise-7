<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.exercise7.core.model.Roles" table="roles">
		<meta attribute="class-description">
			Class-Table mapping contains all Role details.
		</meta>
		<id name="id" type="long" column="id">
			<generator class="increment"/>
		</id>
		<property name="roleCode" column="role_code" type="string"/>
		<property name="roleName" column="role_name" type="string"/>
	</class>
</hibernate-mapping>