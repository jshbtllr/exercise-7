<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.exercise7.core.model.ContactInfo" table="CONTACTINFO">
		<meta attribute="class-description">
			Class-Table mapping contains all contact info details of employees.
		</meta>
		<id name="id" type="long" column="id">
			<generator class="increment"/>
		</id>
		<property name="infoType" column="contact_info_type" type="string"/>
		<property name="infoDetail" column="contact_information" type="string"/>
		<many-to-one name="parentEmployee" column="employee_id" cascade="all"/>
	</class>
</hibernate-mapping>